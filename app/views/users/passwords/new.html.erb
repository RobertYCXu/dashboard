<div class="page">
	<canvas class="canvas"></canvas>
	<h1 class="heading--home heading--big">Forgot your password?</h1>
	<div class="form form--home form--sign-up">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true %>
		  </div>

		  <div class="actions">
		    <input type="button" name="commit" value="Send me reset password instructions">
		  </div>
		<% end %>

		<%= render "users/shared/links" %>
	</div>
</div>
<%= render '/layouts/canvas' %>
